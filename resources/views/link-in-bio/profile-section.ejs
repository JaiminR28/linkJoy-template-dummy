<% if(profile_layout == 1) { %>
    <nav class="container navbar navbar-light fixed-top bg-white py-0 px-3">
        <a class="navbar-brand head-logo" href="#">
            <img src="<%= profile %>" class="d-inline-block align-middle rounded-circle border" alt="" loading="">
            <%= title %>
        </a>
        <div class="float-right">
            <a href="<%=button_url %>" target="_blank">
                <button type="button" class="btn btn-custom mr-auto">"<%=button_text %></button>
            </a>
        </div>
    </nav>
<% } %>

<% if(profile_layout == 2) { %>
    <div class="d-flex flex-column justify-content-center align-items-center bg-white py-0 px-3">
        <div class="head-logo mt-3">
            <img src="<%= profile %>" class="rounded-circle border" alt="" loading="">
        </div>
        <div class="mt-3">
            "<%= title %>"
        </div>
        <div class="mt-3">
            <a href="<%= button_url %>" target="_blank">
                <button type="button" class="btn btn-lg btn-custom mr-auto">"<%= button_text %>"</button>
            </a>
        </div>
    </div>
<% } %>


<% if() { %>
    <nav class="container navbar navbar-light fixed-top bg-white py-0 px-3">
        <div class="d-flex align-items-center w-100">
            <a href="<%= button_url %>" target="_blank">
                <button type="button" class="btn btn-custom mr-auto">"<%= button_text %>"</button>
            </a>
            <div class="w-100">
                <div class="navbar-brand head-logo d-flex align-items-center justify-content-end">
                    <span class="text-wrap w-75 text-right">"<%= title %>"</span>
                    <img src="<%= profile %>" class="d-inline-block align-middle rounded-circle border" alt="" loading="">
                </div>
            </div>
        </div>
    </nav>
<% } %>

<!-- if centered profile layout then mt-0  -->
<div class="d-flex justify-content-center <%= profile_layout != 2 ? 'mt-5' : '' %>">
    <p class="text-center mt-4 mb-4"><%= description %></p>
</div>

