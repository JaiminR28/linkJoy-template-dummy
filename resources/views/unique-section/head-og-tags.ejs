<% if (og_tags) { %>
<% if (og_tags.title) { %>
<meta property="og:title" content="<%= og_tags.title %>">
<meta property="twitter:title" content="<%= og_tags.title %>">
<meta property="twitter:text:title" content="<%= og_tags.title %>">
<% } %>

<% if (og_tags.description) { %>
<meta name="description" content="<%= og_tags.description %>">
<meta property="og:description" content="<%= og_tags.description %>">
<meta property="twitter:description" content="<%= og_tags.description %>">
<% } %>

<% if (og_tags.site_name) { %>
<meta property="og:site_name" content="<%= og_tags.site_name %>">
<% } %>

<% if (og_tags.url) { %>
<meta property="og:url" content="<%= getValidURL(og_tags.url) %>">
<meta property="twitter:url" content="<%= getValidURL(og_tags.url) %>">
<% } %>

<% if (og_tags.type) { %>
<meta property="og:type" content="<%= og_tags.type %>">
<meta property="twitter:card" content="summary_large_image">
<% } %>

<% if (og_tags.media) { %>
<meta property="og:image" content="<%= process.env.CLOUDIMG_URL + og_tags.media.view_url %>&func=crop&w=1200&h=630">
<meta property="twitter:image" content="<%= process.env.CLOUDIMG_URL + og_tags.media.view_url %>&func=crop&w=1200&h=630">
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<% } %>
<% } %>